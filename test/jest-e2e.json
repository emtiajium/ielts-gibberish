{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../",
    "testEnvironment": "node",
    "testMatch": ["<rootDir>/test/e2e/**/*.{ts,js}"],
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "reporters": ["default", ["jest-junit", { "outputDirectory": "./coverage" }]],
    "setupFiles": ["<rootDir>/test/jest-init.ts"],
    "moduleNameMapper": {
        "^@/(.*)": "<rootDir>/src/$1",
        "^@test/(.*)": "<rootDir>/test/$1"
    }
}
